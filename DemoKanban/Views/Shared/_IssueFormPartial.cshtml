@model Issue

<form method="post" asp-action="@ViewData["Action"]">
    @if (ViewData["Action"] == "Edit") {
        <input type="hidden" asp-for="Id" />
    }

    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea class="form-control" asp-for="Notes"></textarea>
        <span asp-validation-for="Notes"></span>
    </div>
    <div class="form-group">
        <label asp-for="State"></label>
        <select class="form-control" asp-for="State" asp-items="Html.GetEnumSelectList<IssueState>()"></select>
        <span asp-validation-for="State"></span>
    </div>
    <div class="checkbox">
        <input type="checkbox" asp-for="IsUrgent" />
        <label asp-for="IsUrgent"></label>
        <span asp-validation-for="IsUrgent"></span>
    </div>
    <div class="form-group">
        <label asp-for="Deadline"></label>
        <input class="form-control" type="date" asp-for="Deadline" />
        <span asp-validation-for="Deadline"></span>
    </div>

    <div class="form-group">
        <label asp-for="AssignedToId"></label>
        <select class="form-control" asp-for="AssignedToId" asp-items="@ViewData["People"] as IEnumerable<SelectListItem>"></select>
        <span asp-validation-for="AssignedToId"></span>
    </div>
    <button class="btn btn-primary" type="submit">@ViewData["SubmitText"]</button>
</form>